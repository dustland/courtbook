{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./built",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "built"]
} 